<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome_screen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.assignment2.medipack.mineseek.WelcomeScreen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_buttons"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp">

        <Button
            android:text="@string/play_game"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="10dp"
            android:id="@+id/main_play_game"
            android:minWidth="300dp"
            android:minHeight="70dp"
            android:background="@drawable/button"
            android:fontFamily="monospace"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_light"
            android:layout_marginBottom="5dp" />

        <Button
            android:text="@string/options"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:id="@+id/main_options"
            android:minWidth="300dp"
            android:minHeight="70dp"
            android:background="@drawable/button"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:fontFamily="monospace"
            android:textColor="@android:color/background_light"
            android:layout_marginBottom="5dp" />

        <Button
            android:text="@string/help"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:id="@+id/main_help"
            android:minWidth="300dp"
            android:minHeight="70dp"
            android:background="@drawable/button"
            android:layout_weight="3.30"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:fontFamily="monospace"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:srcCompat="@drawable/header"
        android:id="@+id/mainHeader"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="" />

    <TextView
        android:text="@string/main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_title"
        android:fontFamily="serif"
        android:typeface="normal"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/eviljelly"
        android:id="@+id/slimeMascot"
        android:layout_below="@+id/mainHeader"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:scaleType="fitEnd" />

</RelativeLayout>
